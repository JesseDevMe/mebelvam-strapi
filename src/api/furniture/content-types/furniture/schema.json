      "target": "api::color.color"
    },
    "material": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::material.material"
    },
    "manufacturer": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::manufacturer.manufacturer"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "subcategory": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::subcategory.subcategory"
    },
    "specifics": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::specific.specific"
    }
