    },
    "Size": {
      "type": "component",
      "repeatable": false,
      "component": "fields.size"
    },
    "images": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true,
      "required": true
    },
    "color": {
      "type": "relation",
